<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/WelcomeFirstTV"
        android:layout_width="364dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:text="Welcome to Royal Jordanian First Class flight!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstClassImage2" />

    <ImageView
        android:id="@+id/FirstClassImage2"
        android:layout_width="395dp"
        android:layout_height="223dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/best_airlines_for_flying_first_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>